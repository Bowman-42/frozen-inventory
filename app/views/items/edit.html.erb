<div class="breadcrumb">
  <%= link_to t('navigation.back_to_dashboard'), root_path, class: "back-link" %> |
  <%= link_to t('items.all_items'), items_path, class: "back-link" %> |
  <%= link_to @item.name, item_path(@item.barcode), class: "back-link" %>
</div>

<div class="page-header">
  <h1><%= t('navigation.edit', resource: t('items.title').singularize) %></h1>
  <p><%= t('items.update_item_info') %></p>
</div>

<div class="form-container">
  <%= form_with model: @item, url: item_path(@item.barcode), method: :patch, local: true, class: "item-form" do |f| %>
    <% if @item.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@item.errors.count, 'error') %> prohibited this item from being saved:</h3>
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label class="form-label"><%= t('items.barcode') %></label>
      <input type="text" class="form-input" value="<%= @item.barcode %>" disabled>
      <small class="form-hint"><%= t('forms.hints.barcode_readonly') %></small>
    </div>

    <div class="form-group">
      <%= f.label :name, t('items.item_name'), class: "form-label" %>
      <%= f.text_field :name, class: "form-input", placeholder: t('forms.placeholders.item_name'), required: true %>
    </div>

    <div class="form-group">
      <%= f.label :category_id, t('items.category'), class: "form-label" %>
      <%= f.collection_select :category_id, Category.ordered, :id, :name,
          { prompt: t('forms.prompts.select_category_optional'), selected: @item.category_id },
          { class: "form-input" } %>
      <small class="form-hint"><%= t('forms.hints.categorize_item') %></small>
    </div>

    <div class="form-group">
      <%= f.label :description, t('common.description'), class: "form-label" %>
      <%= f.text_area :description, class: "form-textarea", placeholder: t('forms.placeholders.item_description'), rows: 3 %>
    </div>

    <div class="form-actions">
      <%= f.submit t('items.update_item'), class: "btn btn-primary" %>
      <%= link_to t('navigation.cancel'), item_path(@item.barcode), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>