<div class="breadcrumb">
  <%= link_to t('navigation.back_to_dashboard'), root_path, class: "back-link" %> |
  <%= link_to t('navigation.all', resource: location_term(plural: true)), locations_path, class: "back-link" %>
</div>

<div class="page-header">
  <h1><%= t('navigation.create', resource: location_term) %></h1>
  <p>Add a new <%= location_term.downcase %> to the inventory system</p>
</div>

<div class="form-container">
  <%= form_with model: @location, local: true, class: "location-form" do |f| %>
    <% if @location.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@location.errors.count, 'error') %> prohibited this <%= location_term.downcase %> from being saved:</h3>
        <ul>
          <% @location.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, t('common.name'), class: "form-label" %>
      <%= f.text_field :name, class: "form-input", placeholder: t('forms.placeholders.location_name', location: location_term), required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description, t('common.description'), class: "form-label" %>
      <%= f.text_area :description, class: "form-textarea", placeholder: t('forms.placeholders.location_description', location: location_term.downcase), rows: 3 %>
    </div>

    <div class="form-actions">
      <%= f.submit t('navigation.create', resource: location_term), class: "btn btn-primary" %>
      <%= link_to t('navigation.cancel'), locations_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>