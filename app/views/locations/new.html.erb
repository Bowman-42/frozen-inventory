<div class="breadcrumb">
  <%= link_to "â† Back to Dashboard", root_path, class: "back-link" %> |
  <%= link_to "All #{location_term(plural: true)}", locations_path, class: "back-link" %>
</div>

<div class="page-header">
  <h1>Create New <%= location_term %></h1>
  <p>Add a new <%= location_term.downcase %> to the inventory system</p>
</div>

<div class="form-container">
  <%= form_with model: @location, local: true, class: "location-form" do |f| %>
    <% if @location.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@location.errors.count, "error") %> prohibited this <%= location_term.downcase %> from being saved:</h3>
        <ul>
          <% @location.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-input", placeholder: "e.g., Main Kitchen <%= location_term %>", required: true %>
    </div>


    <div class="form-group">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-textarea", placeholder: "Optional description of the <%= location_term.downcase %> location", rows: 3 %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create #{location_term}", class: "btn btn-primary" %>
      <%= link_to "Cancel", locations_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>