<div class="breadcrumb">
  <%= link_to "← Back to Dashboard", root_path, class: "back-link" %> |
  <%= link_to "All Fridges", locations_path, class: "back-link" %>
</div>

<div class="page-header">
  <h1>Create New Fridge</h1>
  <p>Add a new fridge/freezer to the inventory system</p>
</div>

<div class="form-container">
  <%= form_with model: @location, local: true, class: "location-form" do |f| %>
    <% if @location.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@location.errors.count, "error") %> prohibited this fridge from being saved:</h3>
        <ul>
          <% @location.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-input", placeholder: "e.g., Main Kitchen Fridge", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :barcode, class: "form-label" %>
      <%= f.text_field :barcode, class: "form-input", placeholder: "e.g., FRIDGE001 or scan barcode", required: true %>
      <small class="form-hint">Must be unique</small>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-textarea", placeholder: "Optional description of the fridge location", rows: 3 %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create Fridge", class: "btn btn-primary" %>
      <%= link_to "Cancel", locations_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>