<div class="breadcrumb">
  <%= link_to t('navigation.back_to', resource: t('categories.title')), categories_path, class: "back-link" %>
</div>

<div class="page-header">
  <h1><%= t('categories.new_category') %></h1>
  <p><%= t('categories.create_new_category') %></p>
</div>

<div class="form-container">
  <%= form_with model: @category, local: true, class: "category-form" do |f| %>
    <% if @category.errors.any? %>
      <div class="error-messages">
        <h4><%= pluralize(@category.errors.count, 'error') %> prohibited this category from being saved:</h4>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, t('categories.category_name') %>
      <%= f.text_field :name, placeholder: t('forms.placeholders.category_name'), class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description, "#{t('common.description')} (#{t('forms.optional')})" %>
      <%= f.text_area :description, placeholder: t('forms.placeholders.category_description'), rows: 3, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit t('navigation.create', resource: t('categories.title').singularize), class: "btn btn-primary" %>
      <%= link_to t('navigation.cancel'), categories_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>