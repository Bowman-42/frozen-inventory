<% if notice %>
  <div class="flash-notice"><%= notice %></div>
<% end %>

<div class="breadcrumb">
  <%= link_to "← Back to Dashboard", root_path, class: "back-link" %>
</div>

<div class="page-header">
  <h1>All Categories</h1>
  <p>Browse and manage item categories</p>

  <div class="action-buttons">
    <%= link_to "➕ New Category", new_category_path, class: "btn btn-success" %>
  </div>

  <%= form_with url: search_categories_path, method: :get, local: true, class: "search-form" do |f| %>
    <%= f.text_field :q, placeholder: "Search categories by name or description...", value: params[:q], class: "search-input" %>
    <%= f.submit "Search", class: "btn btn-primary" %>
    <% if params[:q].present? %>
      <%= link_to "Clear", categories_path, class: "btn btn-secondary" %>
    <% end %>
  <% end %>
</div>

<div class="categories-list">
  <% if @categories.any? %>
    <div class="categories-table">
      <table>
        <thead>
          <tr>
            <th>Category Name</th>
            <th>Description</th>
            <th>Items Count</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <%= link_to category.name, category_path(category), class: "category-link" %>
              </td>
              <td class="description">
                <%= truncate(category.description, length: 100) if category.description.present? %>
              </td>
              <td class="items-count">
                <%= pluralize(category.items.count, 'item') %>
              </td>
              <td class="actions">
                <%= link_to "View", category_path(category), class: "btn btn-sm btn-primary" %>
                <%= link_to "Edit", edit_category_path(category), class: "btn btn-sm btn-secondary" %>
                <%= link_to "Delete", category_path(category), method: :delete,
                    confirm: "Are you sure? This will remove the category from all #{pluralize(category.items.count, 'item')}.",
                    class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="empty-state">
      <h3>No categories found</h3>
      <p>No categories have been created yet.</p>
      <%= link_to "Create your first category", new_category_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>