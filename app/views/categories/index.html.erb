<% if notice %>
  <div class="flash-notice"><%= notice %></div>
<% end %>

<div class="breadcrumb">
  <%= link_to t('navigation.back_to_dashboard'), root_path, class: "back-link" %>
</div>

<div class="page-header">
  <h1><%= t('categories.all_categories') %></h1>
  <p><%= t('categories.browse_all_categories') %></p>

  <div class="action-buttons">
    <%= link_to "âž• #{t('categories.new_category')}", new_category_path, class: "btn btn-success" %>
  </div>

  <%= form_with url: search_categories_path, method: :get, local: true, class: "search-form" do |f| %>
    <%= f.text_field :q, placeholder: t('categories.search_placeholder'), value: params[:q], class: "search-input" %>
    <%= f.submit t('navigation.search'), class: "btn btn-primary" %>
    <% if params[:q].present? %>
      <%= link_to t('navigation.clear'), categories_path, class: "btn btn-secondary" %>
    <% end %>
  <% end %>
</div>

<div class="categories-list">
  <% if @categories.any? %>
    <div class="categories-table">
      <table>
        <thead>
          <tr>
            <th><%= t('categories.category_name') %></th>
            <th><%= t('common.description') %></th>
            <th><%= t('categories.items_count') %></th>
            <th><%= t('common.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <%= link_to category.name, category_path(category), class: "category-link" %>
              </td>
              <td class="description">
                <%= truncate(category.description, length: 100) if category.description.present? %>
              </td>
              <td class="items-count">
                <%= pluralize(category.items.count, 'item') %>
              </td>
              <td class="actions">
                <%= link_to t('navigation.view'), category_path(category), class: "btn btn-sm btn-primary" %>
                <%= link_to t('navigation.edit', resource: ''), edit_category_path(category), class: "btn btn-sm btn-secondary" %>
                <%= link_to t('navigation.delete', resource: ''), category_path(category), method: :delete,
                    confirm: "#{t('common.confirm')} #{t('categories.delete_warning', count: category.items.count)}",
                    class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="empty-state">
      <h3><%= t('categories.no_categories') %></h3>
      <p><%= t('categories.no_categories_message') %></p>
      <%= link_to t('categories.create_first'), new_category_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>